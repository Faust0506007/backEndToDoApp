{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["DOM","es2015"],
    "paths": {
      "@todo/*": ["src/todo/*"],
      "@shared/*": ["src/shared/*"],
      "@user/*": ["src/users/*"]
    }
  },
  "exclude": ["node_modules"]
}
